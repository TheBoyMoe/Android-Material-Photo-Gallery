<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>â€¨
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- allow contextual actionbar to float over the toolbar when visible -->
    <style name="AppTheme.ContextActionBar" parent="AppTheme.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <!-- set background color of context action bar -->
        <item name="actionModeBackground">@color/colorSelectedBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="FabTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal</item>
        <item name="android:src">@drawable/ic_add_photo</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/colorAccentDark</item>
    </style>



    <!-- Text Styles -->
    <style name="TextStyle">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TextStyle.Drawer">
        <item name="android:textColor">@color/colorInverseText</item>
        <item name="android:layout_marginLeft">@dimen/normal</item>
    </style>

    <style name="TextStyle.Drawer.Title">
        <item name="android:layout_marginBottom">@dimen/normal</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.ActionBarTitle">
        <item name="android:textColor">@color/colorInverseText</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="TextStyle.PlaceHolder">
        <item name="android:textSize">26sp</item>
        <item name="android:padding">@dimen/normal</item>
    </style>

    <style name="TextStyle.PreviewCount">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorInverseText</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
